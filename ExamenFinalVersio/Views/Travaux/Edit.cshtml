@model ExamenFinalVersio.Models.Travaux

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Travaux</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ID_Travaux, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ID_Travaux, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ID_Travaux, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NumeroPylone, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.DropDownList("NumeroPylone", ViewBag.NumeroPyloneList as List<SelectListItem>, new { @class = "form-control" })*@
            @Html.DropDownListFor(model => model.NumeroPylone, ViewBag.NumeroPyloneList as SelectList, "-- Select NumeroPylone --", new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.NumeroPylone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CIN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CIN", ViewBag.ICIN as SelectList, "-- Select CIN --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CIN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateTravail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateTravail, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.DateTravail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TauxAvancement, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TauxAvancement", ViewBag.TauxAvancementList as SelectList, "-- Select Taux Avancement --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TauxAvancement, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <a href="@Url.Action("Index", "Travaux")">
        <i class="menu-icon tf-icons bx bx-arrow-back"></i>
    </a>
</div>
