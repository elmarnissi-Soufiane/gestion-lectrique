@model IEnumerable<ExamenFinalVersio.Models.Vehicule>

@{
    ViewBag.Title = "Index";
}

<p>
    <a href="@Url.Action("Create", "Vehicule")" class="menu-link">
        <i class="menu-icon tf-icons bx bx-add-to-queue"></i>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Immatricule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeCarburant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KilometrageInitial)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Immatricule)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeCarburant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KilometrageInitial)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Vehicule", new { id = item.Immatricule })">
                <i class="menu-icon tf-icons bx bx-edit-alt"></i>
            </a>

            <a href="@Url.Action("Details", "Vehicule", new { id = item.Immatricule })">
                <i class="menu-icon tf-icons bx bx-show"></i>
            </a>

            <a href="@Url.Action("Delete", "Vehicule", new { id = item.Immatricule })">
                <i class="menu-icon tf-icons bx bx-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
